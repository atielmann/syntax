#set($konten = $!{export.getObjects("konten")})

#set($start = $!{export.getObjects("start")})
#set($end = $!{export.getObjects("end")})

#if($start)
  #if($end)
    <h2>Zeitraum: $!{dateformat.format(${start})} - $!{dateformat.format(${end})}</h2>
    <br/>
  #end
#end

#foreach($konto in $konten)

  $math.reset("soll")
  $math.reset("haben")

  <table>
    <tr>
      <td>
        <b><u>Konto:</u> $!{konto.Kontonummer} - $!{konto.Name}</b>
      </td>
      <td>
        <b><u>Kontoart:</u> $!{konto.KontoArt.Name}
      </td>
    </tr>
  </table>

  <table class="data">
    <tr>
      <th>Datum</th>
      <th style="text-align:right">Beleg</th>
      <th>Buchungstext</th>
      <th style="text-align:right">Soll</th>
      <th style="text-align:right">Haben</th>
      <th style="text-align:right">Steuer</th>
      <th>Gegenkonto</th>
    </tr>

    #set($filenames = $!{export.getObjects("filenames")})
    #parse("kontoauszug.${filenames.get(${konto.KontoArt.Name})}.vm")

    <tr>
      <td colspan="3" style="border-top:1px solid #000000">Gesamt:</td>
      <td style="border-top:1px solid #000000;text-align:right">$!{decimalformat.format($math.get("soll"))}&nbsp;${eur}</td>
      <td style="border-top:1px solid #000000;text-align:right">$!{decimalformat.format($math.get("haben"))}&nbsp;${eur}</td>
      <td colspan="2" style="border-top:1px solid #000000">&nbsp;</td>
    </tr>
  </table>

  <br/>
  <table>

    #set($anfangsbestand = "")
    #if(${konto.getAnfangsbestand(${jahr})})
      #set($anfangsbestand = $!{konto.getAnfangsbestand(${jahr}).getBetrag()})
    #end
    #set($ab = $!{anfangsbestand.toString()})

    $math.reset("oldsaldo")
    $math.reset("newsaldo")
    $math.add("oldsaldo",$konto.getUmsatzBefore($start))
    $math.add("newsaldo",$konto.getUmsatzAfter($end))

    #if($ab != "")
      $math.add("oldsaldo",${anfangsbestand})
      $math.add("newsaldo",${anfangsbestand})
      <tr>
        <td style="color:#909090">Anfangsbestand (zum $!{dateformat.format(${jahr.Beginn})}):</td>
        <td style="color:#909090;text-align:right">$!{decimalformat.format($anfangsbestand)}&nbsp;${eur}</td>
      </tr>
    #end

    <tr>
      <td>Alter Kontostand (zum $!{dateformat.format(${start})}):</td>
      <td style="text-align:right">$!{decimalformat.format($math.get("oldsaldo"))}&nbsp;${eur}</td>
    </tr>
    <tr>
      <td>Summe der Ums&auml;tze:</td>
      <td style="text-align:right">$!{decimalformat.format($math.abs($math.get("umsatz")))}&nbsp;${eur}</td>
    </tr>

    <tr>
      <td style="border-top:1px solid #000000;border-bottom:2px solid #000000">Neuer Kontostand (zum $!{dateformat.format(${end})}):</td>
      <td style="border-top:1px solid #000000;border-bottom:2px solid #000000;text-align:right;white-space:nowrap;"><b>$!{decimalformat.format($math.get("newsaldo"))}&nbsp;${eur}</b></td>
    </tr>
  </table>

  <br/><br/><br/>

#end
